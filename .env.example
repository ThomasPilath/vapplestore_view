# Docker Hub
DOCKERHUB_USERNAME={/* entrer votre identifiant docker hub */}

# Application DB connection (used by Next.js API Routes + frontend)
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME={/* entrer un nom pour la base de donnée */}
DATABASE_USER={/* entrer un nom pour le user */}
DATABASE_PASSWORD={/* entrer un mot de passe */}

# MariaDB container
MARIADB_ROOT_PASSWORD={/* entrer un mot de passe pour le root */}

# Ports d'exposition (production)
APP_EXPOSITION_PORT={/* entrer un port d'exposition pour application */}
PHPMYADMIN_PORT={/* entrer un port d'exposition pour phpMyAdmin */}

# URLs publiques (pour reverse proxy)
# PHPMYADMIN_URL=https://db.tondomaine.com

# Secrets JWT - CHANGEZ CES VALEURS EN PRODUCTION !
# Générez des secrets sécurisés avec : openssl rand -base64 64
JWT_ACCESS_SECRET=your-access-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production

# Admin initial (pour script d'initialisation)
# Par défaut : admin / AdminPassword123
ADMIN_USERNAME=admin
ADMIN_PASSWORD=AdminPassword123

# URL de l'API (optionnel, par défaut vide pour les appels relatifs)
NEXT_PUBLIC_API_URL=

# Frontend API URL (pour les appels fetch du client)
# En développement local: laisser vide (utilise localhost)
# En production: https://tondomaine.com
NEXT_PUBLIC_API_URL=
